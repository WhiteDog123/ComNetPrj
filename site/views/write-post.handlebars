{{! HTML 폼은 브라우저와 서버의 통신하는 거}}
<form action='/upload' method="post">
  <div class="container">
    <!-- 제목-->
    <div class="form-group">
      <div>
        <input type="text" class="form-control input-lg" placeholder="Title" name="post_title" autocomplete=off>
      </div>
    </div>

<!-- 썸머노트-->
<!-- 글꼴이 하나만 떠오르는 문제 해결해야함.-->
    <textarea id="summernote" name="post_content"> </textarea>
    <script>
      $('#summernote').summernote({
        placeholder: 'Write Post here',
        tabsize: 2,
        height: 500,
        fontNames: ['Roboto Condensed', 'Open Sans'],
        codemirror: { theme: 'monokai' },
      });
    </script>
   

    <div class="button">
      <button type="submit" class="btn btn-default pull-right">Upload Post</button>
    </div>
  </div>
</form>